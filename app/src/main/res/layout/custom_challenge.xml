<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.main.menu.challenge.CustomChallenge">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">
        <ImageView
            android:id="@+id/chall_img_main"
            android:layout_width="65dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_room_black_24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/chall_txt_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:text="4km 주행하기"
                android:textColor="#000"
                android:textSize="18dp" />
            <RelativeLayout
                android:id="@+id/chall_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/chall_img_unit"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_assistant_photo_black_24dp"/>

                <TextView
                    android:id="@+id/chall_txt_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/chall_img_unit"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/chall_img_unit"
                    android:text="0.00km / 4.00km"
                    android:textColor="#000" />
                <ImageView
                    android:id="@+id/chall_img_exp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_toRightOf="@+id/chall_txt_unit"/>

                <TextView
                    android:id="@+id/chall_txt_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/chall_img_unit"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/chall_img_exp"
                    android:text="500EXP"
                    android:textColor="#000" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>